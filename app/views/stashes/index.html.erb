<h1>Stash List</h1>

<%= form_with(model: @stash, local: true) do |form| %>
  <%= form.file_field :attachment %>
  <%= form.submit 'Upload' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Download</th>
      <th>Created at</th>
      <th>Updated at</th>
    </tr>
  </thead>
  <tbody>
    <% @stashes.each do |stash| %>
      <tr>
        <td><%= stash.id %></td>
        <td><%= link_to 'Download', rails_blob_path(stash.attachment, disposition: 'attachment') if stash.attachment.attached? %></td>
        <td><%= stash.created_at %></td>
        <td><%= stash.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
